<h1><%= @user.username %></h1>
<p>--------------------</p>
<h4>Full Name: <%=@user.name %></h4>
<h4>Home Church: <%=@user.church %></h4>
<h4>Favorite Verse: <%=@user.verse %></h4>
<br><br>
<h2>Prayer Groups:</h2>
<h4><%= "You have not joined any groups yet" if @user.groups.size == 0 %></h4>


<ul>
	<%@user.groups.each do |group| %>
		<a href="/groups/<%=group.id%>"><li><%=group.name%> - <%=group.leader.name%></li></a>
	<% end %>
</ul>
<br><br>

<h2>Public Prayers: </h2>
<% @user.prayers.find_all{|prayer|prayer.public?}.sort.each do |prayer| %>
	<% if !prayer.anonymous? %>
		<a href="/prayers/<%=prayer.id%>"><li><%=prayer.overview%></li></a>
	<% end %>
<% end %>
<br><br>