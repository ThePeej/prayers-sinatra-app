<div class="columns">
	<div class="column is-one-third is-offset-one-third">
		<h1 class="title">Edit Account</h1>
		<p class="subtitle">*required</p>
		<form method="post" action="/users/<%@user.id%>">
			<input type="hidden" id="hidden" name="_method" value="patch">
			<div class="field">
				<label class="label" for="username" >Username*</label>
				<p class="control has-icons-left">
				    <input class="input" id="username" type="text" name="username" value="<%= @user.username %>"/>
			    	<span class="icon is-small is-left">
			        	<i class="fas fa-user"></i>
			    	</span>
				</p>
			</div>
			<div class="field">
				<label class="label for="email" ">Email*</label>
				<p class="control has-icons-left">
				    <input class="input" id="email" type="email" id="email" name="email" value="<%= @user.email %>"/>
			    	<span class="icon is-small is-left">
			        	<i class="fas fa-envelope"></i>
			    	</span>
				</p>
			</div>
			<div class="field">
				<label class="label" for="password" >Password*</label>
				<p class="control has-icons-left">
					<input class ="input" id="password" type="password" name="password" value="<%= @user.password %>"/>
			    	<span class="icon is-small is-left">
			        	<i class="fas fa-lock"></i>
			    	</span>
				</p>
			</div>
			<br>
			<div class="field">
				<p class="help">Optional:</p>
				<label class="label" for="name">Name</label>
				<p class="control">
				    <input class="input" type="text" id="name" name="name" value="<%= @user.name %>"/>
				</p>
			</div>
			<div class="field">
				<label class="label" for="church">Home Church</label>
				<p class="control">
				    <input class="input" type="text" id="church" name="church" value="<%= @user.church %>"/>
				</p>
			</div>
			<div class="field">
				<label class="label" for="verse">Favorite Verse</label>
				<p class="control">
					<textarea class="textarea" type="text" id="verse" name="verse"/><%= @user.verse %></textarea>
				</p>
			</div>
			<div class="field">
			    <p class="control">
			    	<button class="button is-success">
			      	Save
			    	</button>
			  	</p>
			</div>
		</form>
	</div>
</div>