<% if !!flash[:error] %>
	<div class="notification is-danger">
  		<h4><%= flash[:error] %></h4>
  	</div>
<% end %>
<a href="/groups/new">Create New Group</a>


<h1>Public Groups:</h1>

<ul>
	<% @groups.each do |group| %>
		<a href="/groups/<%=group.id%>"><li><%=group.name%> - <%=group.leader.name%></li></a>
	<% end %>
</ul>

