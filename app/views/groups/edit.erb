<% if !!flash[:error] %>
	<div class="notification is-danger">
  		<h4><%= flash[:error] %></h4>
  	</div>
<% end %>

<div class="columns">
	<div class="column is-8 is-offset-2">
		<h1 class="title is-2">Edit <%=@group.name%></h1>
		<form method="post" action="/groups/<%=@group.id%>">
			<input type="hidden" id="hidden" name="_method" value="patch"/>
			<label for="prayer_overview" class="subtitle is-5">Group Name:</label>
			<input class="input" type="text" id="name" name="name" value="<%=@group.name%>"/>
			<br><br>
			<label for="description" class="subtitle is-5">Description:</label>
			<textarea class="textarea" type="text" id="description" name="description"><%=@group.description%></textarea>
			<label class="checkbox" for="private">Is this a private group? </label>
			<input type="checkbox" id="private" name="private" <%='checked' if @group.private? %>>
			<br><br>
			<input class="button is-info" type="submit" value="Save Changes"/>
			<a class="button is-text" href="/groups">Cancel</a>
		</form>
	</div>
</div>