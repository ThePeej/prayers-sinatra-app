<% if !!flash[:error] %>
  <h4 style="color:red;""><%= flash[:error] %></h4>
<% end %>

<h1>Edit Prayer Request</h1>
<form method="post" action="/prayers">
	<h4><label for="prayer_overview">What would you like others to pray about?</label></h4>
	<input type="text" id="prayer_overview" name="overview" size=60 value="<%=@prayer.overview%>"/>
	<br><br>
	<input type="text" id="prayer_description" name="description" size=60 value="<%=@prayer.description%>"/>
	<br><br>
	<label for="anonymous_prayer">Post prayer anonymously? </label>
	<input type="checkbox" id="anonymous_prayer" name="anonymous" <%="checked" if @prayer.anonymous? %>/>
	<label for="public_prayer">Is this a public prayer? </label>
	<input type="checkbox" id="prayer_prayer" name="public" <%="checked" if @prayer.public? %>/>

	<% if current_user.groups.count > 0 %>
		<h4>Post to a group?:</h4>
		<% current_user.groups.each do |group| %>
			<input type="checkbox" name="group_id[]" value="<%=group.id%>" <%="checked" if group.prayers.include?(@prayer) %>><%=group.name%></input>
		<% end %>
	<% end %>
	<br><br>
	<input type="submit" value="Submit"/>
</form>
