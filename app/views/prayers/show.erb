<div class="columns">
	<div class="column is-8 is-offset-2">
		<div class="content">
			<h1 class="title is-3"><%= @prayer.overview %></h1>

			
			<% if @prayer.anonymous? && @prayer.author == current_user%>
				<p class="subtitle is-6">You posted this anonymously 
			<% elsif @prayer.anonymous? %>
				<p class="subtitle is-6">Posted by: Anonymous</p>
			<% elsif @prayer.author == current_user%>
				<p class="subtitle is-6">You posted this
			<% else %>
				<p class="subtitle is-6">Posted by: <%=@prayer.author.username %>
			<% end %>

			on <%= @prayer.created_at.strftime("%m/%d/%y at %I:%M%p %Z")%></p>

			<br>

			
			<article class="message">
				<div class="message-header">
			    	<p><%= "Details:" if !!@prayer.details %></p>
			  	</div>
			  	<div class="message-body">
			    	<%= @prayer.details %>
			  	</div>
				</article>
			

			<br>

			<h4>Posted in:</h4>
			<ul>
			<%if @prayer.public? %>
			<a href="/prayers"><li>Public</li></a>
			<% end %>

			<% @prayer.groups.each do |group| %>
				<a href="/groups/<%=group.id%>"><li><%=group.name%></li></a>
			<% end %>
			</ul>

			<br><br>

			<% if @prayer.author == current_user %>
			    <a href="/prayers/<%=@prayer.id%>/edit">Edit Prayer</a>
			<% end %>

			<br>

			<% if @prayer.author == current_user %>
			    <a href="/prayers/<%=@prayer.id%>/delete">Delete Prayer</a>
			<% end %>
		</div>

	</div>
</div>